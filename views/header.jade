header.mdl-layout__header
  .mdl-layout__header-row
    // Title
    span.mdl-layout-title
      | #{locals.app_name}
    // Add spacer, to align navigation to the right
    .mdl-layout-spacer
    // Navigation. We hide it in small screens.
    nav.mdl-navigation.mdl-layout--large-screen-only
      a.mdl-navigation__link.mdl-typography--text-uppercase(href='/') Home
      a.mdl-navigation__link.mdl-typography--text-uppercase(href='/recipes') Recipes
      a.mdl-navigation__link.mdl-typography--text-uppercase(href='/ingredients') Ingredients
.mdl-layout__drawer
  span.mdl-layout-title
      | #{locals.app_name}
  nav.mdl-navigation
    a.mdl-navigation__link.mdl-typography--text-uppercase(href='/') Home
    a.mdl-navigation__link.mdl-typography--text-uppercase(href='/recipes') Recipes
    a.mdl-navigation__link.mdl-typography--text-uppercase(href='/ingredients') Ingredients
